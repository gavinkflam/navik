<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/colorSafe"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <ImageView
        android:id="@+id/visualAdvisor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="12dp"
        android:src="@drawable/turn_0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_rectangle">

        <TextView
            android:id="@+id/metersToTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/meters_to_turn_placeholder"/>

        <TextView
            android:id="@+id/streetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/metersToTurn"
            android:layout_alignStart="@id/metersToTurn"
            android:textAppearance="?android:textAppearanceMedium"
            android:ellipsize="end"
            android:text="@string/street_name_placeholder"/>

        <TextView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_alignStart="@id/metersToTurn"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/progress_placeholder"/>

    </RelativeLayout>

</android.support.wearable.view.BoxInsetLayout>
