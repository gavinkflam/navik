<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Text appearance -->
    <style name="AppTheme.TextAppearance">
    </style>

    <style name="AppTheme.TextAppearance.Large">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="AppTheme.TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme.TextAppearance.Small">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.TextAppearance.Smaller">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- UI regions -->
    <style name="AppTheme.ElevatedSheet">
        <item name="android:background">@drawable/elevated_sheet</item>
        <item name="android:paddingLeft">@dimen/ui_region_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/ui_region_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/ui_region_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/ui_region_vertical_margin</item>
    </style>

    <!-- NoNonsense-FilePicker -->
    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>

        <!-- If you want to set a specific toolbar theme, do it here -->
        <!-- <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
